{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "lib": ["es2018"],
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node", "jest"]
  },
  "include": ["*"],
  "exclude": ["node_modules"]
}
